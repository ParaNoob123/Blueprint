#!/bin/bash
# parafetch-install script by Para

set -e

echo "ðŸ”„ Setting up parafetch installer..."

# Ensure /usr/local/bin exists
mkdir -p /usr/local/bin

# Install parafetch script from GitHub
wget -q -O /usr/local/bin/parafetch https://raw.githubusercontent.com/ParaNoob123/Blueprint/refs/heads/main/parafetch
chmod +x /usr/local/bin/parafetch

# Create fake apt wrapper
if [ ! -f /usr/local/bin/apt ]; then
    cat << 'EOF' > /usr/local/bin/apt
#!/bin/bash
if [[ "$1" == "install" && "$2" == "parafetch" ]]; then
    echo "ðŸ“¥ Installing parafetch..."
    wget -q -O /usr/local/bin/parafetch https://raw.githubusercontent.com/ParaNoob123/Blueprint/refs/heads/main/parafetch
    chmod +x /usr/local/bin/parafetch
    echo "âœ… parafetch installed successfully! Run 'parafetch' to start."
else
    /usr/bin/apt "$@"
fi
EOF
    chmod +x /usr/local/bin/apt
fi

echo "âœ… Done! Now you can install with:"
echo " apt install parafetch "
echo " then parafetch "
