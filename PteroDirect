#!/bin/bash

# ============================================
#   Pterodactyl One-Click Installer by Para
# ============================================

echo -e "\n\033[1;36m"
cat << "EOF"

  _____        _____            
 |  __ \ /\   |  __ \     /\    
 | |__) /  \  | |__) |   /  \   
 |  ___/ /\ \ |  _  /   / /\ \  
 | |  / ____ \| | \ \  / ____ \ 
 |_| /_/    \_\_|  \_\/_/    \_\
                                
                                
   🤍 One Click Pterodactyl Installer

EOF
echo -e "\033[0m"

# Ask for FQDN (domain)
read -p "Enter your FQDN (example: panel.example.com): " FQDN

# Run installer with auto-inputs
bash <(curl -s https://pterodactyl-installer.se) <<EOF
2
Panel
Panel
Panel
Asia/Kolkata
admin@gmail.com
admin@gmail.com
admin
admin
admin
admin
$FQDN
y
EOF

# Configure Firewall
echo -e "\033[1;34mConfiguring UFW Firewall...\033[0m"
ufw allow 80
ufw allow 443
ufw allow 22
ufw allow 8080
ufw --force enable

echo -e "\n\033[1;32m-------------------------------------\033[0m"
echo -e "\033[1;32m Installation Finished! 🎉\033[0m"
echo -e "\033[1;35m Panel: $FQDN\033[0m"
echo -e "\033[1;35m Admin Login: admin@gmail.com / admin\033[0m"
echo -e "\033[1;32m-------------------------------------\033[0m"
